{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./src/types", "./src/@types"],
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "module": "node16",
    "target": "ES2022",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "types": ["vitest"],
  "exclude": ["node_modules", "dist", "src/events"]
}
