{
  "name": "backend-project",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/app.ts",
    "migrate:create": "npx knex migrate:make --knexfile src/infrastructure/database/knexfile.ts",
    "migrate:run": "npx knex migrate:latest --knexfile src/infrastructure/database/knexfile.ts",
    "migrate:rollback": "npx knex migrate:rollback --knexfile src/infrastructure/database/knexfile.ts",
    "seed:run": "knex seed:run --knexfile src/infrastructure/database/knexfile.ts",
    "seed:create": "knex seed:make --knexfile src/infrastructure/database/knexfile.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.ts src/**/*.tsx",
    "prepare": "husky install",
    "test": "vitest"
  },
  "dependencies": {
    "bq-knex-base-repository": "^1.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^2.4.2",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/express": "^4.17.17",
    "@types/knex": "^0.16.1",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^0.34.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
